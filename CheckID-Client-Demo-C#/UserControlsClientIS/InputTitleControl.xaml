<UserControl x:Class="ClientInspectionSystem.UserControlsClientIS.InputTitleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientInspectionSystem.UserControlsClientIS"
             mc:Ignorable="d" 
             d:DesignHeight="120" 
             d:DesignWidth="500">
    <Grid Background="#252525">
        <Label
            x:Name="lbtitleInput"
            FontSize="14"
            Height="30"
            Width="200"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Foreground="White"
            Content="ENTER TITLE FORM"
            Margin="5,5,5,5"/>

        <TextBox
            x:Name="txtTitleForm"
            FontSize="14"
            Height="30"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Margin="5,40,5,5">
        </TextBox>
        <Button
            x:Name="btnTitleSubmit"
            Click="btnTitleSubmit_Click"
            Content="OK"
            HorizontalContentAlignment="Center"
            Width="100"
            VerticalAlignment="Bottom"
            Margin="5,5,5,5">
            
        </Button>
    </Grid>
</UserControl>
